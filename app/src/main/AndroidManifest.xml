<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="inters.patamobile" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="inters.patamobile.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="inters.patamobile.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="inters.patamobile.DiagnosticosActivity"
            android:label="@string/title_activity_diagnosticos" >
        </activity>
        <activity
            android:name="inters.patamobile.CriarPacienteActivity"
            android:label="@string/title_activity_criar_paciente" >
        </activity>
        <activity
            android:name="inters.patamobile.SintomasActivity"
            android:label="@string/title_activity_sintomas" >
        </activity>

        <activity
            android:name="inters.patamobile.GestaoPacienteActivity"
            android:label="@string/title_activity_gestao_paciente" >
        </activity>
        <activity
            android:name="inters.patamobile.HistoricoConsultasActivity"
            android:label="@string/title_activity_historico_consultas" >
        </activity>
        <activity
            android:name="inters.patamobile.ListaPacientesActivity"
            android:label="@string/title_activity_lista_pacientes" >
        </activity>
    </application>

</manifest>
